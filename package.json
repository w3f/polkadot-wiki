{
  "scripts": {
    "start": "yarn polkadot:start",
    "kusama:start": "yarn mirror; yarn copy:translations; cd kusama-guide; docusaurus-start",
    "kusama:build": "BUILDING=true; yarn mirror; yarn copy:translations; cd kusama-guide; docusaurus-build; node ./postprocess",
    "kusama:inject": "node --experimental-json-modules scripts/inject.mjs --rootDir kusama-guide/build/kusama-guide-hosting",
    "kusama:publish-gh-pages": "yarn mirror; PUBLISHING=true; cd kusama-guide; docusaurus-publish",
    "kusama:pdf": "yarn mr-pdf --initialDocsURL=\"http://localhost:3000/docs/en/kusama-index\" --paginationSelector=\".docs-next.button\" --excludeSelectors=\".docs-prevnext\" --pdfFormat=\"A4\" --outputPDFFilename=\"kusama-guide/static/kusama-wiki.pdf\" --pdfMargin=\"30, 5, 10, 5\"",
    "kusama:remove": "node --experimental-json-modules scripts/removeUneeded.mjs ksm",
    "polkadot:start": "yarn generateRegistryTable; yarn mirror; cd website; docusaurus-start",
    "polkadot:build": "yarn generateRegistryTable; BUILDING=true; cd website; docusaurus-build; node ./postprocess",
    "polkadot:inject": "node --experimental-json-modules scripts/inject.mjs --rootDir website/build/polkadot-wiki --node wss://rpc.polkadot.io",
    "polkadot:publish-gh-pages": "yarn mirror; PUBLISHING=true; cd website; docusaurus-publish",
    "polkadot:pdf": "yarn mr-pdf --initialDocsURL=\"http://localhost:3000/docs/en/getting-started\" --paginationSelector=\".docs-next.button\" --excludeSelectors=\".docs-prevnext,.navigationSlider,#footer\" --pdfFormat=\"A4\" --outputPDFFilename=\"website/static/polkadot-wiki.pdf\" --pdfMargin=\"30, 5, 10, 5\"",
    "polkadot:uploadPdf": "node --experimental-json-modules scripts/ipfs-upload-pdf.mjs",
    "polkadot:remove": "node --experimental-json-modules scripts/removeUneeded.mjs dot",
    "mirror": "node --experimental-json-modules scripts/mirror.mjs",
    "copy:translations": "cp -R website/translated_docs kusama-guide ",
    "publish-gh-pages": "cd website; docusaurus-publish",
    "write-translations": "docusaurus-write-translations",
    "version": "docusaurus-version",
    "rename-version": "docusaurus-rename-version",
    "crowdin-upload": "crowdin --config ../crowdin.yaml upload sources --auto-update -b master",
    "crowdin-download": "crowdin --config ../crowdin.yaml download -b master",
    "generateRegistryTable": "node --experimental-json-modules scripts/generateRegistryTable.mjs > docs/build-ss58-registry.md; npx prettier docs/build-ss58-registry.md --write",
    "generateErrorTable": "node --experimental-json-modules scripts/generateErrorTable.mjs >> docs/maintain-errors.md ; npx prettier docs/maintain-errors.md --write",
    "kusama2:clean": "shx rm -rf node_modules/.cache; docusaurus clear kusama-guide-v2",
    "kusama2:start": "yarn mirror2; docusaurus start kusama-guide-v2",
    "prekusama2:build": "npm-run-all -ln kusama2:clean -p \"fetch --isPolkadot=false\" mirror2 kusama2:copy-assets kusama2:i18n:* --aggregate-output",
    "kusama2:build": "cross-env BUILDING=true docusaurus build kusama-guide-v2; node kusama-guide-v2/postprocess",
    "kusama2:publish-gh-pages": "cross-env PUBLISHING=true docusaurus deploy kusama-guide-v2",
    "kusama2:copy-assets": "cp -R docs/assets kusama-guide-v2/i18n/zh-CN/docusaurus-plugin-content-docs/current",
    "kusama2:i18n:download": "yarn polkadot2:crowdin:download:zh-CN",
    "kusama2:i18n:copy-translations": "cp -R website-v2/i18n/zh-CN/docusaurus-plugin-content-docs/current kusama-guide-v2/i18n/zh-CN/docusaurus-plugin-content-docs/current",
    "kusama2:pdf": "yarn pdf --initialDocURLs \"http://localhost:3000/docs/kusama-index\" --outputPDFFilename=\"kusama-guide-v2/static/kusama-wiki.pdf\" --coverTitle=\"KUSAMA GUIDE\"",
    "polkadot2:clean": "shx rm -rf node_modules/.cache; docusaurus clear website-v2",
    "polkadot2:start": "yarn generateRegistryTable; docusaurus start website-v2",
    "prepolkadot2:build": "npm-run-all -ln polkadot2:clean polkadot2:crowdin:download:* -p fetch generateRegistryTable mirror2 polkadot2:copy-assets:* --aggregate-output",
    "polkadot2:build": "cross-env BUILDING=true docusaurus build website-v2; node website-v2/postprocess",
    "polkadot2:publish-gh-pages": "cross-env PUBLISHING=true docusaurus deploy website-v2",
    "polkadot2:pdf": "yarn pdf --initialDocURLs \"http://localhost:3000/docs/getting-started\" --outputPDFFilename=\"website-v2/static/polkadot-wiki.pdf\" --coverTitle=\"POLKADOT WIKI\"",
    "polkadot2:crowdin:upload:source": "crowdin upload sources --config ./crowdin2.yaml -b master",
    "polkadot2:crowdin:download:ru": "crowdin download --config ./crowdin2.yaml -b master -l ru",
    "polkadot2:crowdin:download:zh-CN": "crowdin download --config ./crowdin2.yaml -b master -l zh-CN",
    "polkadot2:copy-assets:ru": "shx mkdir -p website-v2/i18n/ru-RU/docusaurus-plugin-content-docs/current; shx cp -R docs/assets website-v2/i18n/ru-RU/docusaurus-plugin-content-docs/current",
    "polkadot2:copy-assets:zh-CN": "shx mkdir -p website-v2/i18n/zh-CN/docusaurus-plugin-content-docs/current; shx cp -R docs/assets website-v2/i18n/zh-CN/docusaurus-plugin-content-docs/current",
    "pdf": "npx mr-pdf --contentSelector=\"article\" --paginationSelector=\".pagination-nav__item--next > a\" --pdfFormat=\"A4\" --pdfMargin=\"90,60,80,60\"",
    "fetch": "node --experimental-json-modules scripts/fetch.mjs --isPolkadot",
    "mirror2": "node --experimental-json-modules scripts/mirror2.mjs",
    "crowdin": "crowdin",
    "docusaurus": "docusaurus"
  },
  "devDependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@crowdin/cli": "^3.6.4",
    "@docusaurus/core": "2.0.0-beta.3",
    "@docusaurus/module-type-aliases": "^2.0.0-beta.3",
    "@docusaurus/plugin-client-redirects": "^2.0.0-beta.3",
    "@docusaurus/preset-classic": "2.0.0-beta.3",
    "@octokit/rest": "^18.6.7",
    "@polkadot/api": "^5.0.1",
    "@polkadot/keyring": "^7.0.1",
    "axios": "^0.21.1",
    "chalk": "^4.1.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^10.0.0",
    "ipfs-http-client": "^50.1.1",
    "katex": "^0.13.11",
    "loud-rejection": "^2.2.0",
    "mr-pdf": "^1.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.1",
    "react-dom": "^17.0.2",
    "remarkable-katex": "^1.1.8",
    "shx": "^0.3.3",
    "unist-util-visit": "2.0.3",
    "yargs": "^17.0.1"
  }
}
