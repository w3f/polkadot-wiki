{
  "scripts": {
    "start": "yarn polkadot:start",
    "kusama:start": "yarn mirror; yarn copy:translations; cd kusama-guide; docusaurus-start",
    "kusama:build": "BUILDING=true; yarn mirror; yarn copy:translations; cd kusama-guide; docusaurus-build; node ./postprocess",
    "kusama:inject": "node scripts/inject.js --rootDir kusama-guide/build/kusama-guide-hosting",
    "kusama:publish-gh-pages": "yarn mirror; PUBLISHING=true; cd kusama-guide; docusaurus-publish",
    "kusama:pdf": "yarn mr-pdf --initialDocsURL=\"http://localhost:3000/docs/en/kusama-index\" --paginationSelector=\".docs-next.button\" --excludeSelectors=\".docs-prevnext\" --pdfFormat=\"A4\" --outputPDFFilename=\"kusama-guide/static/kusama-wiki.pdf\" --pdfMargin=\"30, 5, 10, 5\"",
    "kusama:remove": "node scripts/removeUneeded.js ksm",
    "polkadot:start": "yarn generateRegistryTable; yarn mirror; cd website; docusaurus-start",
    "polkadot:build": "yarn generateRegistryTable; BUILDING=true; cd website; docusaurus-build; node ./postprocess",
    "polkadot:inject": "node scripts/inject.js --rootDir website/build/polkadot-wiki --node wss://rpc.polkadot.io",
    "polkadot:publish-gh-pages": "yarn mirror; PUBLISHING=true; cd website; docusaurus-publish",
    "polkadot:pdf": "yarn mr-pdf --initialDocsURL=\"http://localhost:3000/docs/en/getting-started\" --paginationSelector=\".docs-next.button\" --excludeSelectors=\".docs-prevnext,.navigationSlider,#klaro,#footer\" --pdfFormat=\"A4\" --outputPDFFilename=\"website/static/polkadot-wiki.pdf\" --pdfMargin=\"30, 5, 10, 5\"",
    "polkadot:uploadPdf": "node scripts/ipfs-upload-pdf.js",
    "polkadot:remove": "node scripts/removeUneeded.js dot",
    "mirror": "node scripts/mirror.js",
    "copy:translations": "cp -R website/translated_docs kusama-guide ",
    "publish-gh-pages": "cd website; docusaurus-publish",
    "write-translations": "docusaurus-write-translations",
    "version": "docusaurus-version",
    "rename-version": "docusaurus-rename-version",
    "crowdin-upload": "crowdin --config ../crowdin.yaml upload sources --auto-update -b master",
    "crowdin-download": "crowdin --config ../crowdin.yaml download -b master",
    "postinstall": "patch-package",
    "generateRegistryTable": "node scripts/generateRegistryTable.js > docs/build-ss58-registry.md; npx prettier docs/build-ss58-registry.md --write",
    "generateErrorTable": "node scripts/generateErrorTable.js >> docs/maintain-errors.md ; npx prettier docs/maintain-errors.md --write"
  },
  "devDependencies": {
    "docusaurus": "^1.14.6"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@polkadot/api": "^3.11.1",
    "@octokit/rest": "^18.3.3",
    "@polkadot/keyring": "^6.0.4",
    "axios": "^0.21.1",
    "fs-extra": "^9.1.0",
    "ipfs-http-client": "^49.0.2",
    "katex": "^0.12.0",
    "mr-pdf": "^0.2.3",
    "patch-package": "^6.4.5",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "react-bootstrap": "^1.5.1",
    "remarkable-katex": "^1.1.7",
    "replace-in-file": "^6.2.0",
    "semver": "^7.3.4",
    "yargs": "^16.2.0"
  }
}
